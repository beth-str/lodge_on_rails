<% if !flash[:notice].blank? %>
	<div class="panel panel-primary">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="page-header">
<h1>All Activities</h1>
</div>

<div>
<% @activities.each do |t| %>
<p><strong><%= t.name %></strong> | <%= t.person_limit %><br />
<%= link_to 'Show', "activities/#{t.id}" %> | 
<%= link_to('Edit', :action => 'edit', :id => t.id) %> | 
<%= link_to 'Delete', "activities/#{t.id}",
			method: :delete, 
			data: { confirm: 'Are you sure you want to delete this activity?' } %></p>

<% end %>
</div>
<br />

<h4><%= link_to 'Add a new activity', new_activity_path %></h4>  


<p>Params: <%= params.inspect %></p>