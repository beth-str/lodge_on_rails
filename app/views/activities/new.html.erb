<div class="page-header">
<h1>Add a New Activity</h1>
</div>

<%= form_for(:activity, :url => {:action => 'create'}) do |f| %>

<% if @activity.errors.any? %>
	<div id="error_explanation">
		<ul>
			<%= @activity.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>	

  <p><%= f.label "Activity Name:" %><br>
  <%= f.text_field(:name) %></p>
  
  <p><%= f.label "Person Limit:" %><br>
  <%= f.number_field(:person_limit) %></p>
    
  <p><%= f.submit "Add New Activity", class: "btn btn-primary" %></p> 
<% end %>
<br />
  
<p> <%= link_to("Back", activities_path)%> </p> 
<br />
<br />

<p>Params: <%= params.inspect %></p>  