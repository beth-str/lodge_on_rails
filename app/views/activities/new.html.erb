<div class="page-header">
<h1>Add a New Activity</h1>
</div>
<p>Find me in app/views/activities/new.html.erb</p>



<%= form_for(:activity, :url => {:action => 'create'}) do |f| %>
  <%= f.label "Activity Name:" %>
  <%= f.text_field(:name) %><br />
  
  <%= f.label "Person Limit:" %>
  <%= f.number_field(:person_limit) %><br />
    
  <%= f.submit "Add New Activity", class: "btn btn-primary" %> 
<% end %>
<br />
  
<p> <%= link_to("Back", activities_path)%> </p> 

<p>Params: <%= params.inspect %></p>  
