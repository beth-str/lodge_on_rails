<div class="page-header">
	<h1>Edit Activity</h1>
</div>

<%= form_for(:activity, method: :put, 
			:url => {:action => 'update'}) do |f| %>
  <p><%= f.label "Activity Name:" %><br>
  <%= f.text_field(:name) %></p>
  
  <p><%= f.label "Person Limit:" %><br>
  <%= f.number_field(:person_limit) %></p>
    
  <p><%= f.submit "Edit Activity", class: "btn btn-primary" %></p> 
<% end %>
<br />
  
<p> <%= link_to("View all activities", activities_path)%> </p> 

<p>Params: <%= params.inspect %></p>  

