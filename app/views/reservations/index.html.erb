<% if !flash[:notice].blank? %>
	<div class="panel panel-primary">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="page-header">
<h1>All Reservations</h1>
</div>

<div>
<% @reservations.each do |t| %>
  <p><strong><%= t.contact %></strong> | <%= t.email %><br /> 
    Adults: <%= t.no_adults %><br />
    Children: <%= t.no_children %><br />
    Arrival: <%= t.arrival_date %><br />
  <%= link_to 'Show', "reservations/#{t.id}" %> | 
  <%= link_to('Edit', :action => 'edit', :id => t.id) %> | 
  <%= link_to 'Delete', "reservations/#{t.id}",
  			method: :delete, 
  			data: { confirm: 'Are you sure you want to delete this reservation?' } %>
   </p>
<% end %>
</div>
<br />

<h4><%= link_to 'Add a new activity', new_activity_path %>  |  <%= link_to 'View all activities', activities_path %></h4>  
<h4><%= link_to 'Add a new guest', new_guest_path %>  |  <%= link_to 'View all guests', guests_path %></h4>
<h4><%= link_to 'Add a new reservation', new_reservation_path %>  |  <%= link_to 'View all reservations', reservations_path %></h4>

<br>
<p>Params: <%= params.inspect %></p>
